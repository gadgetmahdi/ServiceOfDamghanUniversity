<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutBuses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/details_row_background"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_list"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp">


        <TextView
            android:id="@+id/txtBusSituations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00ff00"/>

        <TextView
            android:id="@+id/txtBusUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="#ffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgBus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circular_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtBusName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="green bus"
                android:textColor="@color/details_row_text_color"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtBusDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="only for girls"
                android:textColor="@color/details_row_details_text_color"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBusSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:textColor="@color/details_row_details_text_color"/>

    </LinearLayout>

</LinearLayout>